{
    "MCLV-48V-300W": {
      "Buttons": {
        "BUTTON_01": {
          "debouncing": {
            "enabled": true,
            "delay_ms": 50
          },
          "gpio_config": {
            "pin_number": "PC1",
            "pull_up": true,
            "active_low": false
          }
        },
        "BUTTON_02": {
          "debouncing": {
            "enabled": true,
            "delay_ms": 50
          },
          "gpio_config": {
            "pin_number": "PC3",
            "pull_up": true,
            "active_low": false
          }
        }
      },
      "Leds": {
        "LED_01": {
          "gpio_config": {
            "pin_number": "PC28",
            "active_low": false
          }
        },
        "LED_02": {
          "gpio_config": {
            "pin_number": "PE2",
            "active_low": false
          }
        }
      },
      "Analog_Circuits": {
        "Phase A current": {
          "type": "shunt_with_opamp",
          "circuit_param": {
            "shunt_resistor": 0.003,
            "opamp_gain": 25.0,
            "opamp_bias": 1.65
          },
          "peripheral": {
            "instance": "AFEC0",
            "channel": 0
          },
          "gpio_config": {
            "pin_number": "PD30"
          }
        },
        "Phase B current": {
          "type": "shunt_with_opamp",
          "circuit_param": {
            "shunt_resistor": 0.003,
            "opamp_gain": 25.0,
            "opamp_bias": 1.65
          },
          "peripheral": {
            "instance": "AFEC0",
            "channel": 6
          },
          "gpio_config": {
            "pin_number": "PA17"
          }
        },
        "Phase C current": {
          "type": "shunt_with_opamp",
          "circuit_param": {
            "shunt_resistor": 0.003,
            "opamp_gain": 25.0,
            "opamp_bias": 1.65
          },
          "peripheral": {
            "instance": "AFEC0",
            "channel": 6
          },
          "gpio_config": {
            "pin_number": "PA17"
          }
        },
        "DC bus current": {
          "type": "shunt_with_opamp",
          "circuit_param": {
            "shunt_resistor": 0.003,
            "opamp_gain": 25.0,
            "opamp_bias": 1.65
          },
          "peripheral": {
            "instance": "AFEC0",
            "channel": 6
          },
          "gpio_config": {
            "pin_number": "PA17"
          }
        },
        "DC link current": {
          "type": "voltage_divider",
          "circuit_param": {
            "top_resistor": 66.0,
            "bottom_resistor": 3.0
          },
          "peripheral": {
            "instance": "AFEC0",
            "channel": 7
          },
          "gpio_config": {
            "pin_number": "PA18"
          }
        }
      },
      "Position_Interface": {
        "QDEC": {
            "type": "optical_encoder",
            "peripheral": {
                "instance": "TC0",
                "channel": "0"
            },
            "gpio_pins": {
                "qea": {
                    "gpio_config": {
                        "pin_number": "PA0"
                    }
                },
                "qeb": {
                    "gpio_config": {
                        "pin_number": "PA1"
                    }
                }
            }
        }
      },
      "Inverter": {
        "INVERTER": {
          "peripheral": {
            "instance": "PWM0",
            "channels": {
              "phase_a": 0,
              "phase_b": 1,
              "phase_c": 2
            }
          },
          "gpio_pins": {
            "phase_a": {
              "low_side": {
                "gpio_config": {
                  "pin_number": "PD24"
                }
              },
              "high_side": {
                "gpio_config": {
                  "pin_number": "PA11"
                }
              }
            },
            "phase_b": {
              "low_side": {
                "gpio_config": {
                  "pin_number": "PD25"
                }
              },
              "high_side": {
                "gpio_config": {
                  "pin_number": "PA12"
                }
              }
            },
            "phase_c": {
              "low_side": {
                "gpio_config": {
                  "pin_number": "PD26"
                }
              },
              "high_side": {
                "gpio_config": {
                  "pin_number": "PA13"
                }
              }
            },
            "fault": {
              "gpio_config": {
                "pin_number": "PD9"
              }
            }
          },
          "voltage_rating": 24,
          "current_rating": 5,
          "control_mode": "PWM",
          "max_pwm_frequency": 20000
        }
      },
      "Communication": {
        "X2C_PORT": {
          "type": "two_wired_uart",
          "peripheral": {
            "instance": "UART0",
            "transmit_channel":"0",
            "receive_channel": "0"
          },
          "gpio_pins": {
            "transmit": {
              "gpio_config": {
                "pin_number": "PA10"
              }
            },
            "receive": {
              "gpio_config": {
                "pin_number": "PA9"
              }
            }
          }
        }
      }
    }
}
